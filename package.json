{
    "name": "node-red-contrib-awtrix3",
    "version": "0.0.2",
    "description": "awtrix3 by 10der",
    "dependencies": {
        "node-fetch": "^2.6.0"
    },
    "scripts": {
        "lint": "eslint -c .eslintrc ./"
    },
    "repository": {
    },
    "author": "Oleg Denisenko <oleg.denisenko@gmail.com>",
    "keywords": [
        "node-red"
    ],
    "node-red": {
        "nodes": {
            "awtrix3": "awtrix3.js",
            "awtrix3-config": "awtrix3-config.js"
        }
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-import": "^2.18.2",
        "prettier": "^1.18.2"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "overrides": [
            {
                "files": [
                    "*.js"
                ],
                "rules": {
                    "func-names": "off",
                    "max-lines-per-function": "off",
                    "global-require": "off",
                    "no-plusplus": "off",
                    "no-param-reassign": "off",
                    "no-multi-assign": "off"
                }
            }
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 96
    },
    "license": "MIT"
}
